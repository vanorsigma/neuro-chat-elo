name: Trigger Rust

on:
  - workflow_dispatch

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    - name: Set up Rust
      uses: dtolnay/rust-toolchain@stable
      with:
        toolchain: stable

    - name: Build Release
      working-directory: chatdownloader/
      run: cargo build --release

    - name: Save Artifact
      uses: actions/upload-artifact@v3
      with:
        name: rust-binary
        path: chatdownloader/target/release/chatdownloader